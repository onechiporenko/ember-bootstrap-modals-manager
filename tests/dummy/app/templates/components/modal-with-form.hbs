{{! BEGIN-SNIPPET components-modal-with-form.hbs }}
<BsModal
  @open={{this.modalIsOpened}}
  @title="User Form"
  @onSubmit={{this.confirm}}
  @onHide={{this.decline}}
as |modal|>
  <modal.header/>
  <modal.body>
    <BsForm
      @model={{this.formData}}
      @novalidate={{true}}
      @onSubmit={{this.confirm}}
    as |form|>
      <form.element
        @property="firstName"
        @label="First Name"/>
      <form.element
        @property="lastName"
        @label="Last Name"/>
      <form.element
        @property="email"
        @label="Email"/>
    </BsForm>
  </modal.body>
  <modal.footer>
    <BsButton
      @onClick={{modal.close}}
      @type="default"
      @defaultText="Cancel"/>
    <BsButton
      @onClick={{modal.submit}}
      @type="success"
      @defaultText="Create"/>
  </modal.footer>
</BsModal>
{{! END-SNIPPET }}
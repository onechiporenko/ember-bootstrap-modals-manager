  class="mt-4 d-flex align-items-center"
  @type="warning"
  @dismissible={{false}}
>
  <i class="bi bi-exclamation-triangle-fill me-2 fs-2"></i>
  <div>
    <p>Restriction from the
      <a
        class="alert-link"
        target="_blank"
        href="https://getbootstrap.com/docs/4.6/components/modal/"
        rel="noopener noreferrer"
      >Bootstrap#modals</a>:</p>

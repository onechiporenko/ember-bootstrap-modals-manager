{{! BEGIN-SNIPPET modal-with-form-footer }}
<BsModal
  @open={{@modalIsOpened}}
  @onSubmit={{this.confirm}}
  @onHide={{this.decline}}
  as |modal|
>
  <modal.footer>
    <BsButton @onClick={{modal.close}} @type="default">Cancel</BsButton>
    <BsButton @onClick={{modal.submit}} @type="success">Create</BsButton>
  </modal.footer>
</BsModal>
{{! END-SNIPPET }}
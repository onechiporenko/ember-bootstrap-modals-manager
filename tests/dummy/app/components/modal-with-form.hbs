{{! BEGIN-SNIPPET components-modal-with-form.hbs }}
<BsModal
  @position={{@options.position}}
  @size={{@options.size}}
  @backdropTransitionDuration={{@options.backdropTransitionDuration}}
  @renderInPlace={{@options.renderInPlace}}
  @transitionDuration={{@options.transitionDuration}}
  @open={{@modalIsOpened}}
  @keyboard={{false}}
  @backdropClose={{false}}
  @onSubmit={{fn this.confirm}}
  @onHidden={{fn this.decline}}
as |modal|>
  <modal.header @title="User Form"/>
  <modal.body>
    <BsForm
      @model={{this.formData}}
      @novalidate={{true}}
      @onSubmit={{fn this.confirm}}
    as |form|>
      <form.element
        @property="firstName"
        @label="First Name"/>
      <form.element
        @property="lastName"
        @label="Last Name"/>
      <form.element
        @property="email"
        @label="Email"/>
    </BsForm>
  </modal.body>
  <modal.footer>
    <BsButton
      @onClick={{modal.close}}
      @type="default"
      @defaultText="Cancel"/>
    <BsButton
      @onClick={{modal.submit}}
      @type="success"
      @defaultText="Create"/>
  </modal.footer>
</BsModal>
{{! END-SNIPPET }}